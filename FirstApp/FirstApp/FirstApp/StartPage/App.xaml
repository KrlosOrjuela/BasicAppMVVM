<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.App">
    <Application.Resources>
        <Color x:Key="BarBackgroundColor">#212121</Color>
        <Color x:Key="PageBackgroundColor">#212121</Color>
        <Color x:Key="DarkTextColorPage">#212121</Color>
        <Color x:Key="LightTextColorPage">#FFFFFF</Color>

        <Style x:Key="AppButtonStyle" TargetType="Button">
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="{x:StaticResource LightTextColorPage}" />
            <Setter Property="BorderColor" Value="{x:StaticResource LightTextColorPage}" />
        </Style>

    </Application.Resources>
</Application>
